# Editor configuration, see http://editorconfig.org
root = true

[*]
charset=utf-8
end_of_line=crlf
insert_final_newline=false
indent_style=space
indent_size=4

[{.babelrc,.stylelintrc,.eslintrc,jest.config,*.json,*.jsb3,*.jsb2,*.bowerrc}]
indent_style=space
indent_size=2

[{*.ddl,*.sql}]
indent_style=space
indent_size=2

[*.less]
indent_style=space
indent_size=2

[*.scss]
indent_style=space
indent_size=2

[*.xml]
indent_style=space
indent_size=2

[*.ts]
indent_style=space
indent_size=2

[*.md]
max_line_length = off
trim_trailing_whitespace = false
